<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_blog_transfer_scheduler_form" model="ir.ui.view">
        <field name="name">blog.transfer.scheduler.form</field>
        <field name="model">blog.transfer.scheduler</field>
        <field name="arch" type="xml">
            <form string="Blog Transfer Scheduler" create="0">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="blog_transfer_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_blog_transfer_scheduler_tree" model="ir.ui.view">
        <field name="name">blog.transfer.scheduler.tree</field>
        <field name="model">blog.transfer.scheduler</field>
        <field name="arch" type="xml">
            <tree string="Blog Transfer Schedules" create="0">
                <field name="blog_transfer_id" />
            </tree>
        </field>
    </record>
</odoo>