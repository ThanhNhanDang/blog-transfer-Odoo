<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_blog_transfer_scheduler_form" model="ir.ui.view">
        <field name="name">blog.transfer.scheduler.form</field>
        <field name="model">blog.transfer.scheduler</field>
        <field name="arch" type="xml">
            <form string="Blog Transfer Scheduler" create="0">
                <header>
                    <button name="action_deactivate"
                        string="Hủy kích hoạt"
                        type="object"
                        class="btn btn-primary"
                        invisible="not active"
                        confirm="Bạn có chắc chắn muốn hủy kích hoạt lập lịch này?" />
                    <button name="action_activate"
                        string="Kích hoạt"
                        type="object"
                        invisible="active"
                        class="btn btn-info"
                    />
                    <field name="state" widget="statusbar"
                        statusbar_visible="draft,running,done,cancelled" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1>
                            <field name="name" placeholder="Tên lập lịch" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle" invisible="1" />
                            <field name="user_id" />
                            <field name="nextcall" />
                        </group>
                        <group>
                            <label for="interval_number" />
                            <div class="o_row">
                                <field name="interval_number" />
                                <field name="interval_type" />
                            </div>
                            <field name="numbercall" />
                            <!-- <field name="doall" /> -->
                        </group>
                    </group>
                    <notebook>
                        <page string="Chiến dịch chuyển" name="transfers">
                            <field name="blog_transfer_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="selected_post_id" />
                                    <field name="server_mapping_id" />
                                    <field name="state" />
                                    <field name="start_time" />
                                    <field name="end_time" />
                                </tree>
                            </field>
                        </page>
                        <page string="Thông tin cron" name="cron_info">
                            <group>
                                <field name="cron_id" readonly="1" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_blog_transfer_scheduler_tree" model="ir.ui.view">
        <field name="name">blog.transfer.scheduler.tree</field>
        <field name="model">blog.transfer.scheduler</field>
        <field name="arch" type="xml">
            <tree string="Blog Transfer Schedules" create="0">
                <field name="name" />
                <field name="nextcall" />
                <field name="interval_number" />
                <field name="interval_type" />
                <field name="numbercall" />
                <field name="user_id" />
                <field name="active" widget="boolean_toggle" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_blog_transfer_scheduler_search" model="ir.ui.view">
        <field name="name">blog.transfer.scheduler.search</field>
        <field name="model">blog.transfer.scheduler</field>
        <field name="arch" type="xml">
            <search string="Search Blog Transfer Schedules">
                <field name="name" />
                <field name="user_id" />
                <filter string="My Schedules" name="my_schedules"
                    domain="[('user_id', '=', uid)]" />

                <filter string="All" name="active"
                    domain="['|', ('active', '=', False), ('active','=', True)]" />
                <separator />
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]" />
                <filter string="Running" name="running" domain="[('state', '=', 'running')]" />
                <filter string="Done" name="done" domain="[('state', '=', 'done')]" />
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]" />
                <group expand="0" string="Group By">
                    <filter string="User" name="user" context="{'group_by': 'user_id'}" />
                    <filter string="State" name="state" context="{'group_by': 'state'}" />
                    <filter string="Next Execution" name="nextcall"
                        context="{'group_by': 'nextcall'}" />
                </group>
            </search>
        </field>
    </record>


</odoo>